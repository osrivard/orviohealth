# --- Database ---
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/clinic_portal?schema=public"

# --- Auth ---
# IMPORTANT: change this in production (32+ chars)
AUTH_SECRET="dev-change-me-please-32-characters-min"

# --- Storage ---
# For dev we store PDFs locally under ./data. In prod, switch to S3 (Canada region).
STORAGE_DRIVER="local"  # local | s3
LOCAL_STORAGE_DIR="./data"

# --- eSignature provider ---
ESIGN_PROVIDER="mock"   # mock | docusign

# --- DocuSign (sandbox) placeholders ---
DOCUSIGN_INTEGRATION_KEY=""
DOCUSIGN_USER_ID=""        # the doctor DocuSign user ID (per doctor in DB too)
DOCUSIGN_ACCOUNT_ID=""
DOCUSIGN_OAUTH_BASE_PATH="account-d.docusign.com"
DOCUSIGN_REST_BASE_PATH="https://demo.docusign.net/restapi"

# Template IDs (FR first)
DOCUSIGN_TEMPLATE_EYEQNOW_FR=""
DOCUSIGN_TEMPLATE_PHARMACY_CONSENT_FR=""
DOCUSIGN_TEMPLATE_PRESCRIPTION_FR=""

# Webhook (DocuSign Connect) secret validation (optional)
DOCUSIGN_CONNECT_HMAC_SECRET=""
